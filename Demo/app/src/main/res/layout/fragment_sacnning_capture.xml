<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:inner_corner_color="@color/QRCode_inner_corner_color"
        app:inner_corner_length="@dimen/QRCode_inner_corner_length"
        app:inner_corner_width="@dimen/QRCode_inner_corner_width"
        app:inner_height="@dimen/QRCode_inner_height"
        app:inner_margintop="@dimen/QRCode_inner_margin_top"
        app:inner_scan_bitmap="@drawable/icon_tencent"
        app:inner_scan_iscircle="false"
        app:inner_scan_speed="10"
        app:inner_width="@dimen/QRCode_inner_width"/>
</FrameLayout>