<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:padding="@dimen/dp_10"
    android:orientation="horizontal">

    <ImageView
        android:paddingRight="@dimen/dp_2"
        android:id="@+id/iv_home_lv1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:textColor="@color/homefragment_lv_titleColor"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_home_lv1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/homefragment_lv_summaryColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:id="@+id/tv_home_lv1_summary"
            />

        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/homefragment_lv_summaryColor"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_home_lv1_comment"/>



    </LinearLayout>




</LinearLayout>